/* components/musicDetail/musicDetail.wxss */
.musicListContainer{
  display: block;
  /* 一个大大大大坑 */
  height: calc( 100vh - 120rpx );
}
.musicItem{
  display: block;
  width: 650rpx;
  min-height: 60rpx;
  border: 1rpx solid rgb(109, 214, 221);
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.singer{
  padding:0 20rpx;
  text-align: center;
}

/* 框体选中 */
.musicItemChoose{
  box-shadow: 3px 3px 5px #65cca5;
}